body
	margin 0
	font-family Raleway
	background-color white
	
textarea
input
	font-family Raleway

#header
	display flex
	justify-content space-between
	width 100%
	border-bottom 2px #E6E6E6 solid

#logo
	padding 7px 10px 7px 10px
	font-size 36px
	font-weight 900
	color #308aaa
	margin-left 10px
	
#navbar_
	font-size 20px
	display flex
	margin-right 10px
	
#search
	padding 7px 10px 7px 10px
	border-left 1px #E6E6E6 solid

#searchIcon
	width 20px
	padding 10px
		
#navbar
	padding 7px 10px 7px 10px
	display flex
	border-left 1px #E6E6E6 solid

.navlink
	padding 10px
	font-size 18px
	
//------------------------------------------------//
	
#xbar
	display flex
	justify-content space-between
	border-bottom 2px #E6E6E6 solid
	
#searchbox
	display none

.searchtext
	border none
	padding 0
	outline none
	float right
	height 40px
	font-size 18px
	font-family 'Raleway'
	
#links
	padding 7px 17px 7px 17px
	display flex
	
.link
	text-decoration underline
	margin-right 20px
	line-height 1.5
	
#add_
	background-color #308aaa
	width 40px
	height 40px
	text-align center
	
#add
	width 15px
	margin-top 12px
	
//=======================================================//

#body
	display flex
	font-size 18px
	
#articlesuper_
	width 70%
	
#article_
	padding 5%
	display flex
	flex-direction column
	
#blogHeading
	font-weight 600
	font-size 50px
	border none
	outline none

#blogContent
	margin-top 20px
	font-size 24px
	line-height 1.6
	border none
	outline none
	
#blogtags
	display flex

.grey
	color #6F6F6F
	
.lightgrey
	color #A1A1A1
	
.darkgrey
	color #484848
	
#tagsbox
	margin-top 10px
	margin-bottom 20px
	width 100%
	font-family Raleway
	resize none
	outline none
	border none
	font-size 16px
	
#saveBlog_
	margin-top 100px
	display flex
	
#saveBlog_ > span
	line-height 2
	margin-left 20px
	color grey
	
#saveBlog
	width 100px
	font-size 12px
	color white
	font-family Raleway
	float right
	background-color #308aaa
	font-weight 400
	border none
	padding 6px 6px 6px 6px
	outline none
	
@media(max-width: 680px)
	#logo
		font-size 28px
		padding 7px 10px 7px 0px
		
	#navbar_
		margin-right 0px
		
	.navlink
		padding 6px
		font-size 16px

	#search
	#links
		display none
		
	#articlesuper_
		width 100%
	
	#searchbox
		display block
		
	#blogHeading
		font-size 30px
		
	#blogContent
		font-size 18px
		margin-top 10px
		
	#saveBlog_ > span
		display none
		
	#tagsbox
		font-size 14px