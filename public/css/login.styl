a
	color black
	text-decoration none

a:visited
	color black

//=====================POPUP================================//

form
	margin-bottom 0
	
#transparent_screen
	position fixed
	top 0
	width 100%
	height 100%
	background rgba(255,255,255,0.8)
	z-index 0

#popup_
	width 220px
	//margin-top 200px
	position fixed
	margin-left calc(50% - 141px)
	padding 30px
	background-color white
	border 1px solid #d6d6d6
	z-index 3
	//border-radius 10px
		
.login_section
	margin-top 14%
	
.register_section
	margin-top 10%
		
#bar
	display flex
	justify-content space-between
	margin-bottom 17px
	
.selected
	font-weight 600
	
#login_submit
	cursor pointer
	background-color grey
	color white
	
#login_submit:hover
	border 1px solid grey
	background-color white
	color grey

.login_styl
	width 220px
	border 1px solid lightgrey
	outline none
	font-size 16px
	padding 10px 8px 10px 8px
	margin-bottom 20px
	color grey
	background white
	
.login_styl:nth-last-child(1)
	margin-bottom 0
	
#login_other
	display flex
	height 30px
	justify-content space-between
	
.grey
	color #6F6F6F
	
.lightgrey
	color #A1A1A1
	
.darkgrey
	color #484848
	
